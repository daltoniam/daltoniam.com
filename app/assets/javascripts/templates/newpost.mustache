<div class="newPostContent">
	<div class="row">
		<div class="col-md-12">
			<h3 class="mainHeader">New Post</h3>
			<form role="form" id="newPostForm">
				<div class="form-group">
      				<input type="text" class="form-control" value="{{title}}" name="post[title]" placeholder="Title" autofocus />
    			</div>
				<div class="form-group">
					<div class="form-control editable" id="previewBox" data-placeholder="Type the index preview...">{{& preview}}</div>
				</div>
				<div class="form-group">
					<div class="form-control editable" id="contentBox" data-placeholder="Type your post...">{{& text}}</div>
				</div>
				<button type="submit" class="btn btn-default aboutImg createBtn">Create Post</button>
				<p class='postText'><span class='anchorText rightLink cancelLink'>Cancel</span></p>
			</form>
		</div>
		<div class="bottomPad">
		</div>
	</div>
</div>

<!-- Signin Modal -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="signinLabel">Sign in</h4>
        <div id="alert-messages-signin"></div>
      </div>
      <form role="form" id="signinForm">
      	<div class="modal-body">
 			<div class="form-group">
    			<label for="userNameInput">User Name</label>
    			<input type="text" class="form-control" name="name" placeholder="Enter User Name">
  			</div>
  			<div class="form-group">
    			<label for="passwordInput">Password</label>
    			<input type="password" class="form-control" name="password" placeholder="Enter Password">
  			</div>
      	</div>
      	<div class="modal-footer">
        	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        	<button type="submit" class="btn btn-primary">Sign in</button>
      	</div>
     </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->